<center>
  <h1>My宿</h1>
</center>

<%= form_for @owner do |f| %>
  <%= f.label :name, "宿名 : " %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :capacity, "宿泊人数 : " %>
  <%= select_tag :capacity, options_for_select([1, 2, 3, 4, 5]) %>
  <br>
  <%= f.label :news, "お知らせ : " %>
  <br>
  <%= f.text_area :news %>
  <br>
  <%= f.submit "登録" %>
<% end %>

<%= link_to '戻る', owners_path %>
